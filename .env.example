# GitHub Actions & AWS Configuration - Example Environment Variables
# Copy this file to .env and fill in your values (don't commit .env to GitHub)

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=<your-aws-account-id>
AWS_ECR_REPOSITORY_NAME=user-crud-app
AWS_ECS_CLUSTER_NAME=user-crud-app-cluster
AWS_ECS_SERVICE_NAME=user-crud-app-service
AWS_ECS_TASK_FAMILY=user-crud-app-task
AWS_ECS_TASK_DEFINITION=aws/ecs-task-definition.json

# Container Configuration
DOCKER_IMAGE_TAG=latest
CONTAINER_NAME=user-crud-app
CONTAINER_PORT=8080

# Application Configuration
APP_PROFILE=prod
DATABASE_URL=<your-database-url>
DATABASE_USERNAME=<your-database-username>
DATABASE_PASSWORD=<your-database-password>

# Logging Configuration
CLOUDWATCH_LOG_GROUP=/ecs/user-crud-app
CLOUDWATCH_LOG_STREAM=user-crud-app

# Deployment Configuration
DESIRED_TASK_COUNT=1
CPU_UNITS=256
MEMORY_UNITS=512

# GitHub Configuration
GITHUB_REPOSITORY=<your-github-repo>
GITHUB_BRANCH=main

# Optional: Slack Notifications
SLACK_WEBHOOK_URL=<your-slack-webhook-url>

# Optional: Email Notifications
NOTIFICATION_EMAIL=<your-email@example.com>
